viod maopao(int arr[])
{//确定冒泡排序的趟数
	int i = 0;
	int sz = sizeof(arr) / sizeof(arr[0]);
	for (i = 0;i < sz - 1;j++)
	{
		int j = 0;
		for (j = 0;j < sz-1-i;j++)
		{
			if (arr[j] > arr[j + 1])
			{
				int tmp = arr[j];
				arr[j] = arr[j + 1];
				arr[j + 1] = tmp;


			}
		}


	}

}
int main()
{
	int arr[] = { 9,8,4,7,6,5,3,2,1,0 };
	//对arr进行排序，排成升序
	maopao(arr;)//冒泡排序函数

	
	return 0;
}
